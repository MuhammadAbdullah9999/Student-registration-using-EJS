<%- include('partials/header') %>

<div class="container">
<form action="/form-handler" method="post" enctype="multipart/form-data">

<h2 class="text-center my-4">Student Registration Form</h2>

<!-- Text Input -->
<div class="mb-3">
    <label for="name" class="form-label">Email address</label>
    <input maxlength="50" class="form-control" name="name" size="20" type="text">  
</div>
    <!-- Password Input -->
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" class="form-control" size="20" type="password">
    </div>

    <!-- Check boxes -->

    <label style="margin-right: 3.5%;">Subjects</label>

    <div class="form-check form-check-inline">
        <input class="form-check-input" checked="checked" type="checkbox" value="Algorithms" name="course" id="inlineCheckbox1">
        <label class="form-check-label" for="flexCheckDefault">
          Algorithms
        </label>
    </div>
    
    

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="OOP" name="course" id="inlineCheckbox2">
        <label class="form-check-label" for="flexCheckDefault">
          OOP
        </label>
    </div>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="Data Structures" name="course" id="inlineCheckbox3">
        <label class="form-check-label" for="flexCheckDefault">
          DSA
        </label>
    </div>
    <br><br>
    <!-- Radio buttons -->

    <label style="margin-right: 2%;">Credit Card</label>

    
    <div class="form-check form-check-inline">
        <input class="form-check-input" checked="checked" type="checkbox" value="Visa" name="credit_card" id="inlineCheckbox3">
        <label class="form-check-label" for="flexCheckDefault">
          Visa
        </label>
    </div>
    

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="Master Card" name="credit_card" id="inlineCheckbox3">
        <label class="form-check-label" for="flexCheckDefault">
          Master Card
        </label>
    </div>

    <div class="form-check form-check-inline ">
        <input class="form-check-input"  type="checkbox" value="American Express City" name="credit_card" id="inlineCheckbox3">
        <label class="form-check-label" style="width: 200px;" for="aexpress">
          American Express
        </label>
    </div>

    <br><br>

    <!-- Using Option Lists - Select single value -->

    <label>City</label><br>

    <select name="city"  class="form-select form-select-sm mb-3" aria-label=".form-select-sm example" style="width: 200px;">

        <option selected="selected" value="Lahore">Lahore</option>

        <option value="Karachi">Karachi</option>

        <option value="Islamabad">Islamabad</option>

    </select>  

    <!-- Selecting multiple elements in option lists -->

    <label>Favorite Language</label>

    <select multiple="multiple" name="languages[]" size="4" class="form-select form-select-sm mb-3" aria-label=".form-select-sm example" style="width: 200px;">

        <option>Java</option>

        <option>PHP</option>

        <option>Ruby</option>

        <option>C</option>

        <option>C#</option>

    </select> 
    <div class="mb-3">
      <label for="cv"  class="form-label" >CV</label>
      <input type="file" name="cv" class="form-control">
    </div>

    <div class="mb-3">
      <label for="cv" class="form-label">Profile Image</label>
      <input type="file" name="image" class="form-control">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</div>

<%- include('partials/footer') %>
</body>
</html>